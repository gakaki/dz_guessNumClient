.cut-line {
  width: 100%;
  height: 20rpx;
  background-color: #e48d48;
  opacity: 0.2;
}

.record-icon {
  width: 215rpx;
  height: 32rpx;
  margin: 18rpx 0 18rpx 0;
}

.record-bg {
  margin-top: 5rpx;
  width: 375rpx;
  height: 61rpx;
  vertical-align: bottom;
}

.bg-l {
  transform: rotateY(180deg);
}

.record-list {
  /* height: 406rpx; */
  position: fixed;
  top: 796rpx;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #fff9e3;
}

.one-record {
  position: relative;
  display: flex;
  border-bottom: 3rpx solid rgba(178,31,46,.5);
  height: 104rpx;

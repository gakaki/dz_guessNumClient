/* pages/record/record.wxss */
.el-select {
  height: 548rpx;
  margin-top: 50rpx;
  padding: 10rpx 26rpx 0;
  background: url("https://gengxin.odao.com/update/h5/guessNum/record/bg.png") no-repeat;
  background-size: 749rpx 548rpx;
}

.tab {
  flex: 1;
  text-align: center;
  font: bold 40rpx  'Microsoft YaHei';
  color: #7f5831;
  line-height: 84rpx;
}
.active {
  text-shadow: 3rpx 3rpx 3rpx #fffeae;
  color: #7d2c39;
  background: #fee271;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  margin: 18rpx 0 20rpx;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}
.nickname {
  font: bold 32rpx/1 "Microsoft YaHei";
  color: #7f5831;
}
.money-num {
  margin: 34rpx 0 54rpx;
  width: 252rpx;
  height: 103rpx;
  border-radius: 10rpx;
  background: #a17a4f;
}
.money-content {
  padding: 14rpx 0 6rpx;
  font: bold 32rpx/1 "Microsoft YaHei";
  color: #ffc88d;
}
.num {
  font-weight: normal;
}
.toMoney {
  width: 26rpx;
  height: 32rpx;
  vertical-align: top;
}
.package {
  margin-top: 1rpx;
  width: 25rpx;
  height: 30rpx;
  vertical-align: top;
}
.service {
  margin-top: 1rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: top;
}
.tab-content {
  display: inline-block;
  margin-left: 5rpx;
  font-size: 30rpx;
  line-height: 32rpx; 
  color: #7f5831;
  vertical-align: top;
}
.btn-wrap {
  position: relative;
}
.btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.guess-record-title {
  margin-top: -20rpx;
}
.record-list {
  padding: 0 6rpx;
  height: 570rpx;
  background: rgba(143, 45, 46, 0.6);
}
.record-bg {
  width: 375rpx;
  height: 61rpx;
  vertical-align: bottom;
}
.bg-l {
  transform: rotateY(180deg)
}
.guess-record-content {
  position: absolute;
  left: 288rpx;
  top: 23rpx;
  padding-top: 12rpx;
  width: 178rpx;
  height: 52rpx;
  color: #65400b;
  text-align: center;
  font: bold 34rpx/1 "Microsoft YaHei";
  background: url('https://gengxin.odao.com/update/h5/guessNum/guess/record.png') no-repeat;
  background-size: 178rpx 64rpx;
}
.list {
  text-indent: 14rpx;
  font: 28rpx/108rpx "Microsoft YaHei";
  height: 108rpx;
  border-bottom: 3rpx solid #d34c4b;
}
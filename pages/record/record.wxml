<!--pages/record/record.wxml-->
  <view class="container container-wrap">
    <view class='el-select'>
      <view class='flex select'>
        <text class='tab {{send}}' data-type='s' bindtap='switchTab'>我发出的</text>
        <text class='tab {{receive}}' data-type='r' bindtap='switchTab'>我收到的</text>
      </view>
      <view class='content'>
         <image class='avatar' src='{{userInfo.avatarUrl}}'></image>
         <text class='nickname'>{{userInfo.nickName}}</text>
         <view class='money-wrap'>
            <view class='num-left flex-column'>
              <image class='money-img' src='https://gengxin.odao.com/update/h5/wangcai/record/money.png'></image>
              <text class='money-content num' wx:if='{{send}}'>{{sendPackages.sum}}元</text>
              <text class='money-content num' wx:if='{{receive}}'>{{receivePackages.sum}}元</text>
            </view>
            <view class='num-right flex-column'> 
              <image class='money-img' src='https://gengxin.odao.com/update/h5/wangcai/record/num.png'></image>
              <text class='money-content money-content-right num' wx:if='{{send}}'>{{sendPackages.num}}</text>
              <text class='money-content money-content-right num' wx:if='{{receive}}'>{{receivePackages.num}}</text>
            </view>
         </view>
      </view> 
      <view class='list'>
        <view class='flex-space btn-wrap'>
          <image class='btn-img' bindtap='toWithDraw' bindtouchstart='showWithActive' bindtouchend='hideWithActive' src='{{withUrl}}'></image>
          <image class='btn-img' bindtap='toSendPackage' bindtouchstart='showAnotherActive' bindtouchend='hideAnotherActive'
          src='{{anotherUrl}}'></image>
          <image class='btn-img' src='{{serverUrl}}'></image>
        </view>
         <view class='btn'>
          <button class='btn-img' bindtouchstart='showServerActive' bindtouchend='hideServerActive' open-type='contact'>联系客服</button>
        </view> 
      </view> 
    </view>
    <scroll-view  class='record-list' scroll-y='true'>
      <view class='one-list' bindtap='packageDetail' data-item='{{item}}' wx:if='{{send}}' wx:for='{{sendPackages.record}}' wx:key='{{index}}'>
        <text class='one-title'>{{item.title}}</text>
        <text class='one-sum'>{{item.money}}</text>
      </view> 
      <view class='one-list' bindtap='receivePacDetail' data-item='{{item}}' wx:if='{{receive}}' wx:for='{{receivePackages.record}}' wx:key='{{index}}'>
        <view>
          <image class='user-avatar' src='{{item.userInfo.avatarUrl}}'></image>
          <text class='user-nickname'>{{item.userInfo.nickName}}</text>
        </view>
        <text class='one-sum'>{{item.guessInfo.userGetMoney}}</text>
      </view> 
    </scroll-view>
  </view>

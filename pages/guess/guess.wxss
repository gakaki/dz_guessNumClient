/* pages/statistics/statistics.wxss */

.wrap {
  height: 100%;
  overflow: hidden;
}

.red-box {
  width: 100%;
  height: 370rpx;
  background-color: #b21f2e;
  position: relative;
}

.yuanhu {
  width: 100%;
  height: 140rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.yuanhu-icon {
  width: 100%;
  height: 140rpx;
}

.header {
  display: flex;
  height: 172rpx;
}

.avatar-wrap {
  margin: 15rpx 34rpx 0 23rpx;
  width: 115rpx;
  height: 115rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}

.main-title {
  flex: 1;
}

.nickname {
  display: inline-block;
  margin: 19rpx 0 15rpx;
  font-size: 30rpx;
  color: #fff;
}

.package-num {
  position: relative;
  color: #fff;
  width: 180rpx;
  height: 50rpx;
  background-color: #8b1320;
  border-radius: 30rpx;
}

.package {
  margin-top: 5rpx;
  width: 27rpx;
  height: 41rpx;
  margin-left: 18rpx;
}

.num {
  display: inline-block;
  width: 130rpx;
  text-align: center;
  font-size: 32rpx;
  vertical-align: top;
  line-height: 52rpx;
}

.rest {
  display: flex;
  font-size: 32rpx;
  position: absolute;
  right: 25rpx;
  top: 72rpx;
  font: 26rpx/34rpx 'Microsoft YaHei';
  color: #fcdd71;
}

.rest-text {
  margin-left: 3rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.input-tip-wrap {
  position: relative;
  overflow: hidden;
  margin: 0 auto;
  width: 610rpx;
  height: 96rpx;
  border: 4rpx solid #9f101e;
  border-radius: 50rpx;
  z-index: 99;
  background: #fff;
  /* box-shadow: inset 0 4rpx 4rpx #e2b388; */
}

.input-tip {
  text-align: center;
  width: 100%;
  height: 100%;
  /* color: #cacaca; */
  color: #b21f2e;
  font: bold 36rpx "Microsoft YaHei";
  display: flex;
  align-items: flex-start;
  margin-left: 40rpx;
  justify-content: center;
  flex-direction: column;
}

.send,.send-click {
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  width: 122rpx;
  height: 75rpx;
  z-index: 2;
  background: url('https://gengxin.odao.com/update/h5/wangcai/guess/send.png') no-repeat;
  background-size: 122rpx 75rpx;
  background-position: center center;
}

.send-click {
   position: absolute;
  right: 12rpx;
  top: 12rpx;
  width: 122rpx;
  height: 75rpx;
  z-index: 2;
  background: url('https://gengxin.odao.com/update/h5/wangcai/guess/send-active.png') no-repeat;
  background-size: 122rpx 75rpx;
  background-position: center center; 
}

.time {
  height: 67rpx;
}

.time-content {
  font-size: 24rpx;
  line-height: 54rpx;
  color: #fff9e3;
  z-index: 2;
}

.use-jiasu {
  font-size: 24rpx;
  line-height: 54rpx;
  color: #ff0;
  z-index: 2;
  text-decoration: underline;
}

.clearCd {
  margin: 6rpx 0 0 11rpx;
  width: 103rpx;
  height: 46rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 46rpx;
  /* background: url('https://gengxin.odao.com/update/h5/guessNum/guess/btn-green.png') no-repeat; */
  background-size: 103rpx 46rpx;
}

.bg-box {
  background-color: #fff9e3;
}

.game-explain {
  padding-top: 40rpx;
  flex-direction: column;
  height: 213rpx;
  background: url('https://gengxin.odao.com/update/h5/wangcai/guess/regular.png') no-repeat;
  background-size: 700rpx 213rpx;
  background-position: center center;
}

.detail {
  margin: 0 0 22rpx 46rpx;
  color: #e48d48;
  font-size: 26rpx;
  line-height: 1;
}

.tab {
  box-sizing: border-box;
  padding: 10rpx 0 25rpx 0;
}

.tixian {

<!--pages/record/record.wxml-->
  <view class="wrap">
    <view class='line'></view> 
    <view class='el-select'>
      <view class='flex'>
        <text class='tab {{goldClassName}}' data-type='s' bindtap='switchTab'>我发出的</text>
        <text class='tab {{crystalClassName}}' data-type='r' bindtap='switchTab'>我收到的</text>
      </view>
      <view class='content'>
         <image class='avatar' src='{{userInfo.avatarUrl}}'></image>
         <text class='nickname'>{{userInfo.nickName}}</text>
         <view class='flex-space'>
            <view class='money-num flex-column'>
              <text class='money-content'>金额</text>
              <text class='money-content num'>15454元</text>
            </view>
            <view class='money-num flex-column'> 
              <text class='money-content'>数量</text>
              <text class='money-content num'>1000</text>
            </view>
         </view>
      </view> 
      <view class='flex-space'>
        <view>
          <image class='toMoney' src='https://gengxin.odao.com/update/h5/guessNum/record/toMoney.png'></image>
          <text class='tab-content'>去提现</text>
        </view>
        <view bindtap='toSendPackage'>
          <image class='package'
          src='https://gengxin.odao.com/update/h5/guessNum/record/package.png'></image>
          <text class='tab-content'>再发一个</text>
        </view>
        <view class='btn-wrap'>
          <image class='service'
          src='https://gengxin.odao.com/update/h5/guessNum/record/service.png'></image>
          <text class='tab-content'>联系客服</text>
           <button class='btn' open-type='contact'>联系客服</button> 
        </view>
      </view> 
    </view>
    <view class='guess-record-title'>
      <image class='record-bg bg-l' src='https://gengxin.odao.com/update/h5/guessNum/guess/bg.png'></image>
      <image class='record-bg' src='https://gengxin.odao.com/update/h5/guessNum/guess/bg.png'></image>
    </view>
    <scroll-view  class='record-list' scroll-y='true'>
      <view class='list' wx:for='{{list}}' wx:key='{{index}}'>
        <text>{{item.title}}</text>
        <text>{{item.sum}}</text>
      </view> 
    </scroll-view>
  </view>
